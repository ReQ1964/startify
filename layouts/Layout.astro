---
import Header from '@/components/Layout/Header/Header';
import NavigationLinks from '@/components/Common/NavigationLinks.astro';
import Footer from '@/components/Layout/Footer/Footer.astro';

interface LayoutProps {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Startify',
  description = 'A HR website landing page',
  image = "Let's find a suitable package for you ",
}: LayoutProps = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="TBA" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#134e4a" />
    <link rel="canonical" href={Astro.url} />
    <title>{title}</title>
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
  </head>

  <body>
    <main>
      <Header client:only="react">
        <NavigationLinks slot="links" />
      </Header>
      <slot />
      <Footer />
    </main>
  </body>
</html>
