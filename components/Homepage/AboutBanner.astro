---
import { Image } from 'astro:assets';
import banner from '@/src/assets/img/home/home-about.png';
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
---

<UniversalWrapper>
  <h1>about <span>HR STARTIFY</span></h1>
  <section class="content">
    <Image
      src={banner}
      alt="Two people talking and working on two laptops."
      quality={80}
    />
    <article>
      <h2>WELCOME TO HR STARTIFY</h2>
      <p>
        We're your partner in building impactful people and culture
        experiencesâ€”driven by passionate HR professionals who care about your
        success.
      </p>
      <p>
        We work with small to medium-sized organizations that want to get the
        people side of their business right from the start.
      </p>
    </article>
  </section>
</UniversalWrapper>
<style lang="scss">
  h1 {
    margin-bottom: 1rem;
    text-align: center;
  }
  span {
    color: var(--text-color-secondary);
  }
  .content {
    display: grid;
    gap: var(--content-blocks-gap-mobile);
    img {
      border-radius: var(--common-border-radius);
    }
    h2 {
      color: var(--text-color-secondary);
      margin-bottom: 0.5rem;
    }
    p:nth-of-type(2) {
      margin-top: var(--common-gap-mobile);
    }
  }

  @media (min-width: 768px) {
    h1 {
      margin-bottom: calc(var(--common-gap-mobile) + 1rem);
      font-size: 2.2rem;
    }
    .content {
      grid-template-columns: 1.7fr 1fr;
      article {
        place-self: center;
        h2 {
          margin-bottom: 1rem;
        }
      }
    }
  }
</style>
