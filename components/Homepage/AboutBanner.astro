---
import { Image } from 'astro:assets';
import banner from '@/src/assets/img/home/home-about.png';
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
---

<UniversalWrapper>
  <h1>About <span>HR STARTIFY</span></h1>
  <section class="content">
    <Image
      src={banner}
      alt="Two people talking and working on two laptops."
      quality={100}
    />
    <div>
      <h3>WELCOME TO STARTIFY</h3>
      <p>
        Your Partner of passionate people & culture professionals who design
        powerful human resources experience for you.
      </p>
      <p>
        We work with small-medium organizations who want to get the people piece
        right.
      </p>
    </div>
  </section>
</UniversalWrapper>
<style lang="scss">
  h1 {
    margin-bottom: 1rem;
    text-align: center;
  }
  span {
    color: var(--text-color-secondary);
  }
  .content {
    display: grid;
    gap: var(--common-gap);
    img {
      border-radius: 1.25rem;
    }
    h3 {
      color: var(--text-color-secondary);
    }
    p:nth-of-type(2) {
      margin-top: 2rem;
    }
  }

  @media (min-width: 768px) {
    h1 {
      font-size: var(--h1-size);
      margin-bottom: 4rem;
    }
    .content {
      grid-template-columns: 1.7fr 1fr;
      div {
        place-self: center;
        h3 {
          margin-bottom: 1rem;
        }
      }
    }
  }
</style>
