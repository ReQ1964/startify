---
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
import ButtonLink from '../Common/ButtonLink.astro';

const ctaPoints = [
  "Whether you're looking to build, improve, or scale your RPO or MSP model, we offer tailored support backed by real-world expertise.",
  'Consulting services are billed at SGD 350/hour â€“ ideal for short-term projects, strategic guidance, or ongoing advisory.',
];
---

<section class="cta-section">
  <UniversalWrapper class="cta-wrapper">
    <h1>ready to transform your hiring strategy?</h1>

    <div class="cta-points">
      {ctaPoints.map((point) => <p>{point}</p>)}
    </div>

    <ButtonLink
      to="/contact"
      text="explore RPO & MSP consulting"
      width="clamp(100px, 80%, 450px)"
    />
  </UniversalWrapper>

  <style lang="scss">
    .cta-section {
      text-align: center;
      background-color: var(--background-color-quaternary);
      margin: 4rem 0;
      border-bottom: 1px solid #f1f1f1;

      .cta-wrapper {
        display: grid;
        gap: 1rem;
        max-width: 900px;
        margin: 0 auto;
      }

      .cta-points {
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
        p {
          text-align: left;
        }
      }
    }
  </style>
</section>
