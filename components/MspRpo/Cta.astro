<style lang="scss">
  .cta-section {
    text-align: center;
    background-color: var(--background-color-quaternary);
    margin: 4rem 0 2rem;
    border-bottom: 1px solid #f1f1f1;

    .cta-wrapper {
      max-width: 900px;
      margin: 0 auto;
    }

    h1 {
      margin-bottom: 2rem;
    }

    .cta-points {
      margin-bottom: 2rem;

      .cta-point {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
