---
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
import Image from 'astro/components/Image.astro';
import workBanner1 from '@/src/assets/img/about/about-work1.png';
import workBanner2 from '@/src/assets/img/about/about-work2.png';
---

<UniversalWrapper class="workBanner">
  <Image src={workBanner1} alt="peeps working" quality={80} />
  <Image src={workBanner2} alt="peeps working" quality={80} />
</UniversalWrapper>

<style lang="scss">
  .workBanner {
    position: relative;
    img:nth-of-type(1) {
      position: relative;
      width: 55%;
    }
    img:nth-of-type(2) {
      position: absolute;
      bottom: 0%;
      right: 1.5rem;
      width: 55%;
    }
  }
  @media (min-width: 768px) {
    .workBanner {
      img:nth-of-type(2) {
        right: 3rem;
      }
    }
  }
</style>
