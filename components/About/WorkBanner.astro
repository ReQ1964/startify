---
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
import { Image } from 'astro:assets';
import workBanner1 from '@/src/assets/img/about/about-work1.png';
import workBanner2 from '@/src/assets/img/about/about-work2.png';
---

<UniversalWrapper class="workBanner">
  <Image
    src={workBanner1}
    alt="A person in an office sticking various images to a white tiled wall."
    quality={80}
  />
  <Image
    src={workBanner2}
    alt="Two girls having a conversation, while sitting in front of each other with their laptops."
    quality={80}
  />
</UniversalWrapper>

<style lang="scss">
  .workBanner {
    position: relative;
    img:nth-of-type(1) {
      position: relative;
      width: 55%;
    }
    img:nth-of-type(2) {
      position: absolute;
      bottom: 0%;
      right: 1.5rem;
      width: 55%;
    }
  }
  @media (min-width: 768px) {
    .workBanner {
      img:nth-of-type(2) {
        right: 3rem;
      }
    }
  }
</style>
