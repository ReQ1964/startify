---
const { text, to } = Astro.props;
---

<a href={to}>
  {text}
</a>

<style lang="scss">
  a {
    display: block;
    text-decoration: none;
    color: var(--text-color-primary);
    background-color: white;
    font-size: 1.2rem;
    padding: 0.5em 2em;
    margin: 1em auto;
    width: 240px;
    border-radius: 1.25em;
    border: 1px solid black;
  }
</style>
