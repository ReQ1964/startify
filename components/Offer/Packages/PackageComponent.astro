---
const { hrPackage, inverted } = Astro.props;
import type { CollectionEntry } from 'astro:content';
type hrPackageType = CollectionEntry<'hrPackages'>;
import { Image } from 'astro:assets';
import arrowRightBlue from '@/src/assets/icons/arrowRightBlue.svg';
---

<article>
  <h1 class="packageTitle">
    <span>0{hrPackage.data.id}.</span>
    {hrPackage.data.title}
  </h1>
  <div class="description">
    <h2>Whom is it for?</h2>
    <p>{hrPackage.data.description}</p>
  </div>

  <section class="mainContainer">
    <Image
      src={hrPackage.data.image}
      alt={hrPackage.data.imageAlt}
      quality={80}
      class={inverted}
    />
    <section class="content">
      <div>
        <h1 class="featuresTitle">What is included?</h1>
        <ul class="features">
          {
            hrPackage.data.features.map((item: hrPackageType) => {
              if (typeof item === 'object') {
                const key = Object.keys(item)[0];
                const values = Object.values(item)[0] as any;
                return (
                  <li>
                    {key}
                    <ul class="subFeatures">
                      {values.map((value: string) => (
                        <li>
                          <Image
                            src={arrowRightBlue}
                            alt="blue arrow"
                            width={17}
                          />
                          {value}
                        </li>
                      ))}
                    </ul>
                  </li>
                );
              } else if (typeof item === 'string') {
                return <li>{item}</li>;
              }
              return null;
            })
          }
        </ul>
      </div>
      {
        hrPackage.data.optionalModules ? (
          <div class="optionalModules">
            <h2>Optional modules and add-ons:</h2>
            <ul>
              {hrPackage.data.optionalModules.map(
                (singleModule: hrPackageType) => (
                  <li>{singleModule}</li>
                ),
              )}
            </ul>
          </div>
        ) : null
      }
      <aside>
        <h2>How long?</h2>
        <p>{hrPackage.data.duration}</p>
      </aside>
    </section>
  </section>
</article>

<style lang="scss">
  .packageTitle {
    margin-bottom: 2rem;
    span {
      color: var(--text-color-primary);
    }
  }
  .description {
    margin-bottom: var(--content-blocks-gap-mobile);
  }
  .mainContainer {
    display: grid;
    gap: var(--content-blocks-gap-mobile);
    & > img {
      height: 200px;
      object-fit: cover;
      border-radius: var(--common-border-radius);
    }
    .content {
      display: grid;
      gap: var(--content-blocks-gap-mobile);
    }
  }

  h1,
  h2 {
    color: var(--text-color-secondary);
  }
  h1 {
    font-size: 1.6rem;
  }
  h2 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  .featuresTitle {
    margin-bottom: var(--common-gap-mobile);
  }
  .features {
    display: grid;
    gap: 1rem;
    list-style: disc;
    list-style-position: inside;
  }

  .subFeatures {
    display: grid;
    list-style: none;
    list-style-position: inside;
    padding-left: 3rem;
    margin-top: 1.5rem;
    gap: 0.8rem;

    li {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
  }
  .optionalModules {
    ul {
      display: grid;
      gap: 1rem;
      li {
        list-style: disc;
        list-style-position: inside;
      }
    }
  }

  @media (min-width: 768px) {
    .packageTitle {
      font-size: 2rem;
      margin-bottom: 3rem;
    }
    .description {
      margin-bottom: 4rem;
    }
    .mainContainer {
      grid-template-columns: 1.6fr 1fr;
      gap: 0;
      column-gap: 3rem;

      & > img {
        height: 100%;
        grid-column: 2;
        grid-row: 1/3;
      }

      .content {
        height: 100%;
        gap: 4rem;
        grid-row: 1/3;
      }
    }

    .mainContainer .inverted {
      grid-column: 1;
    }
  }
</style>
