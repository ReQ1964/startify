---
import { Image } from 'astro:assets';
import UniversalWrapper from '../Layout/UniversalWrapper.astro';
import ContactForm from './ContactForm.astro';
import banner from '@/src/assets/img/home/home-work-together.png';
---

<UniversalWrapper>
  <section class="banner">
    <Image
      src={banner}
      alt="Two people talking and working on two laptops."
      quality={80}
      loading="eager"
    />
    <header>
      <h1>let&apos;s talk</h1>
      <div class="contact">
        <p>Have a question or ready to get started?</p>
        <p>
          Call us at <a href="tel:+6584209754">+65 8420 9754</a> or simply fill out
          the form below—we’ll get back to you shortly.
        </p>
      </div>
      <p>
        Whether you're exploring our services or dealing with a complex business
        challenge, we’re here to help.
      </p>
    </header>
    <ContactForm class="contactForm" />
  </section>
</UniversalWrapper>
<style lang="scss">
  .banner {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 500px;
    margin: 0 auto;

    a {
      display: inline-block;
      font-weight: 700;
      text-decoration: none;
      color: var(--text-color-primary);
      transition-duration: 100ms;
      &:hover {
        scale: 1.02;
      }
    }

    header {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      margin-top: var(--content-blocks-gap-mobile);
      place-self: center;
      h1 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
      }

      .contact {
        display: grid;
        gap: 0.2rem;
      }
    }
    gap: var(--common-gap-mobile);
    img {
      border-radius: var(--common-border-radius);
      margin: 0 auto;
    }
  }

  @media (min-width: 1100px) {
    .banner {
      grid-template-columns: 1fr 1fr;
      max-width: none;
      header {
        place-self: start;
        padding-left: 2rem;
        margin: 0;
        h1 {
          font-size: 2rem;
        }
        h4 {
          margin-bottom: 1rem;
        }
      }
      img {
        grid-row: 1/3;
        height: 100%;
        object-fit: cover;
      }
      .contactForm {
        grid-column: 2;
      }
    }
  }
</style>
